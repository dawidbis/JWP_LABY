<Window x:Class="JWP_LAB_1C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JWP_LAB_1C"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,395,217">
            <TextBox x:Name="txtWspółczynnikA" TextWrapping="Wrap" Text="2" Width="120"/>
            <TextBox x:Name="txtWspółczynnikB" TextWrapping="Wrap" Text="1" Height="18" Width="120"/>
            <TextBox x:Name="txtWspółczynnikC" TextWrapping="Wrap" Text="4" Height="18" Width="120"/>
            <Button x:Name="btnObliczPierwiastki" Content="Oblicz" Click="Button_Click" Width="320"/>
            <Label x:Name="lblWynikRównania" Content="" Height="45" BorderBrush="Black" BorderThickness="1,1,1,1" Width="318"/>
        </StackPanel>
        <StackPanel Margin="410,0,0,217">
            <Canvas x:Name="cvsPiramida" Height="150" Width="364" Margin="0,12,0,0" Background="#FF98EAFF"/>
            <Button x:Name="btnRysujPiramidę" Content="Rysuj piramidę" Height="30" Width="291" Click="Button_Click_1"/>
        </StackPanel>
        <StackPanel Margin="0,217,395,0">
            <Grid x:Name="gridSzachownica" Height="160" Width="160" Background="#FFFEFFEE"/>
            <Button x:Name="btnRysujSzachownicę" Content="Rysuj szachownicę" Height="30" Width="291" Click="btnRysujSzachownicę_Click"/>
        </StackPanel>
        <StackPanel Margin="410,217,0,0"/>

    </Grid>
</Window>
